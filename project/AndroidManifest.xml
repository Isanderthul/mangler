<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.mangler"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:label="@string/app_name" android:icon="@drawable/mangler_logo" android:debuggable="true">
        <activity android:label="@string/app_name" android:name="main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name="ServerList" android:label="@string/server_list"></activity>
		<activity android:name="ServerEdit" android:label="@string/server_edit"></activity>

<activity android:name="ServerView" android:label="@string/server_view" android:configChanges="keyboardHidden|orientation" android:screenOrientation="portrait"></activity>
<activity android:name="ChannelList" android:label="@string/channel_list"></activity>
<activity android:name="UserList" android:label="@string/user_list"></activity>

<activity android:name="ChatView" android:label="@string/chat_view"></activity>
</application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>
	<supports-screens android:normalScreens="true" android:anyDensity="true" android:smallScreens="true" android:largeScreens="true"/>
</manifest> 