<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">
<ScrollView android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:scrollbars="vertical" android:scrollbarAlwaysDrawVerticalTrack="true" android:id="@+id/chatscroll" android:layout_marginBottom="10px"><TextView android:layout_height="wrap_content" android:id="@+id/messages" android:text="* Press menu to join or leave the chat room." android:layout_width="wrap_content"></TextView></ScrollView><EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:imeOptions="actionDone" android:id="@+id/message" android:enabled="false"></EditText>

</LinearLayout>
